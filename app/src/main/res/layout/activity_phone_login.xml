<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/bounarydesign"
        android:padding="8dp"
        android:hint="Write Phone Number Here....."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_phone_iphone_black_24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="17dp"
        android:drawableLeft="@drawable/ic_phone_iphone_black_24dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verification_code_input"
        android:layout_below="@id/phone_number_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bounarydesign"
        android:padding="5dp"
        android:hint="Write Vreificaton code here......"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="17dp"
        android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
        android:visibility="invisible"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_ver_code_buttom"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bounarydesign"
        android:textColor="#0C0C0C"
        android:layout_below="@id/verification_code_input"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verify_buttn"
        android:text="Verify"
        android:textAllCaps="false"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bounarydesign"
        android:textColor="#D016F0"
        android:layout_below="@id/send_ver_code_buttom"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>

</RelativeLayout>